<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.evelin.spenpal.GroupAdding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/groupAddingNewSpendingAmountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0.00ï¿¥"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="32sp" />

        <LinearLayout
            android:id="@+id/groupAddingCategoryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:weightSum="1">

                        <ImageButton
                            android:id="@+id/groupAddingDefaultButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/tag" />

                        <ImageButton
                            android:id="@+id/groupAddingTransportButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/subway" />

                        <ImageButton
                            android:id="@+id/groupAddingDailyButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/daily" />

                        <ImageButton
                            android:id="@+id/groupAddingShoppingButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/shopping" />

                        <ImageButton
                            android:id="@+id/groupAddingHobbyButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/hobby" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:weightSum="1">

                        <ImageButton
                            android:id="@+id/groupAddingFoodButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/food" />

                        <ImageButton
                            android:id="@+id/groupAddingPersonalButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/personal" />

                        <ImageButton
                            android:id="@+id/groupAddingEntertainmentButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/yule" />

                        <ImageButton
                            android:id="@+id/groupAddingMovieButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/movie" />

                        <ImageButton
                            android:id="@+id/groupAddingSocialButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/social" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:weightSum="1">

                        <ImageButton
                            android:id="@+id/groupAddingDrinkButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/drink" />

                        <ImageButton
                            android:id="@+id/groupAddingImageButton6"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/drink" />

                        <ImageButton
                            android:id="@+id/groupAddingImageButton7"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/drink" />

                        <ImageButton
                            android:id="@+id/groupAddingImageButton8"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/drink" />

                        <ImageButton
                            android:id="@+id/groupAddingImageButton9"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/drink" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <EditText
                android:id="@+id/groupAddingCommentEditText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/myedittext"
                android:hint="Comments?"
                android:padding="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="50dp"
                android:singleLine="true"
                android:textColor="#FFFAFA" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/groupAddingAddings"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/groupAddingAddRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/add_divider"
                    android:layout_toStartOf="@+id/add_divider"
                    android:text="Add record" />

                <Button
                    android:id="@+id/groupAddingAddPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/add_divider"
                    android:layout_toRightOf="@+id/add_divider"
                    android:text="Add photo" />

                <TextView
                    android:id="@+id/add_divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <include
                android:id="@+id/addtaskRecordPanel"
                layout="@layout/add_record_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/addtaskPhotoPanel"
                layout="@layout/add_photo_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:stretchColumns="0,1,2,3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/number7"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/snumber7" />

                <ImageButton
                    android:id="@+id/number8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/snumber8" />

                <ImageButton
                    android:id="@+id/number9"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/snumber9" />

                <ImageButton
                    android:id="@+id/incomeButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/income2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/number4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/snumber4" />

                <ImageButton
                    android:id="@+id/number5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/snumber5" />

                <ImageButton
                    android:id="@+id/number6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/snumber6" />

                <ImageButton
                    android:id="@+id/spendButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/spend2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/number1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/snumber1" />

                <ImageButton
                    android:id="@+id/number2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/snumber2" />

                <ImageButton
                    android:id="@+id/number3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/snumber3" />

                <ImageButton
                    android:id="@+id/undoButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sclear" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/number0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_column="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/snumber0" />

                <ImageButton
                    android:id="@+id/dotButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_column="2"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sdot" />

                <ImageButton
                    android:id="@+id/completeButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_column="3"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/scheck" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>
